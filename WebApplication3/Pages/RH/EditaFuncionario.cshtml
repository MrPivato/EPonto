@page
@model EPonto.Pages.RH.EditaFuncionarioModel

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h1>Editar Funcionário</h1>

<div class="text-right">
    <a asp-page="./ListaFuncionario">Voltar</a>
</div>
<hr />

<div class="row">
    <div class="col-md-4 center-block">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Funcionario.Cpf" />
            <div class="form-group">
                <label asp-for="Funcionario.Nome" class="control-label"></label>
                <input asp-for="Funcionario.Nome" class="form-control" />
                <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Email" class="control-label"></label>
                <input asp-for="Funcionario.Email" class="form-control" />
                <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.CargaHoraria" class="control-label"></label>
                <input asp-for="Funcionario.CargaHoraria" class="form-control" type="time" step="1" />
                <span asp-validation-for="Funcionario.CargaHoraria" class="text-danger"></span>
            </div>
            <div class="form-group text-md-center">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
