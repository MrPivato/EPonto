@page
@model EPonto.Pages.RH.CriaFuncionarioModel

@{
    ViewData["Title"] = "Criar Funcionário";
}

<h1>Criar Funcionário</h1>

<div class="text-right">
    <a asp-page="ListaFuncionario">Listagem de Funcionários</a>
</div>

<hr />

<div class="text-center">
    <h4><span class="badge badge-success">@Model.Message</span></h4>
</div>

<div class="row">
    <div class="col-md-4 center-block">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Funcionario.Cpf" class="control-label">CPF</label>
                <input asp-for="Funcionario.Cpf" class="form-control" />
                <span asp-validation-for="Funcionario.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Nome" class="control-label"></label>
                <input asp-for="Funcionario.Nome" class="form-control" />
                <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Email" class="control-label">E-mail</label>
                <input asp-for="Funcionario.Email" class="form-control" />
                <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.CargaHoraria" class="control-label">Carga Horária</label>
                <input asp-for="Funcionario.CargaHoraria" class="form-control" type="time" step="1" />
                <span asp-validation-for="Funcionario.CargaHoraria" class="text-danger"></span>
            </div>
            <div class="form-group text-md-center">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
